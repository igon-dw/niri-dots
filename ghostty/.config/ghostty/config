# Ghostty Configuration

# Font settings
font-family = JetBrainsMono Nerd Font Mono
# font-family = UDEV Gothic NF
font-size = 13
font-style = Regular
font-style-bold = Bold
font-style-italic = Italic
font-style-bold-italic = Bold Italic

# niri manages the transparency settings
# background-opacity = 0.8

# Theme
# Dynamically include current theme (managed by scripts/ghostty-theme-switcher.sh)
# Note: theme.conf is not tracked in git and generated by the script
config-file = ~/.config/ghostty/theme.conf

# Keybindings
# Ghostty uses different keybinding syntax
keybind = shift+ctrl+enter=new_tab
keybind = shift+ctrl+h=next_tab
keybind = shift+ctrl+\=toggle_split_zoom
keybind = shift+ctrl+n=goto_split:next

# Cursor settings
cursor-style = block

# Shell integration
shell-integration-features = no-cursor

# GTK settings
gtk-titlebar = false
window-decoration = false
